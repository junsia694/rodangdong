{
  "name": "global-it-tech-blog-automation",
  "version": "1.0.0",
  "description": "Automated global IT/Electronics tech blog using Node.js with Gemini API and Blogger API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --test src/**/*.test.js",
    "schedule": "node src/scheduler.js",
    "setup-oauth": "node scripts/get-refresh-token.js",
    "quick-oauth": "node scripts/quick-oauth.js",
    "blog": "node scripts/run-blog-automation.js",
    "blog-keyword": "node scripts/run-blog-automation.js --keyword",
    "keywords": "node scripts/run-blog-automation.js --keywords-only",
    "web": "node src/web-server.js",
    "preview": "node src/web-server.js"
  },
  "keywords": [
    "blog-automation",
    "gemini-api",
    "blogger-api",
    "nodejs",
    "seo",
    "content-generation"
  ],
  "author": "Blog Automation System",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "googleapis": "^128.0.0",
    "markdown-it": "^14.1.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
